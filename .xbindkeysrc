# Increase volume
 "pactl set-sink-volume @DEFAULT_SINK@ +1000; sigdwmblocks 2"
    XF86AudioRaiseVolume

# Decrease volume
 "pactl set-sink-volume @DEFAULT_SINK@ -1000; sigdwmblocks 2"
    XF86AudioLowerVolume

# Mute volume
 "pactl set-sink-mute @DEFAULT_SINK@ toggle; sigdwmblocks 2"
    XF86AudioMute

# Decrease brightness
 "xbacklight -dec 1; sigdwmblocks 6"
    m:0x0 + c:68
    F2

# Increase brightness
 "xbacklight -inc 1; sigdwmblocks 6"
    m:0x0 + c:69
    F3

# Firefox
 "firefox"
    m:0x40 + c:67
    Mod4 + F1

# Private Window in Firefox
"firefox --private-window"
    m:0x0 + c:67
    F1

